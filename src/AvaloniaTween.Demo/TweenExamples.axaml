<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:anim="using:AvaloniaTweener"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaTweener.Demo.TweenExamples"
        Title="Tween Animation Examples"
        Width="800" Height="600">

    <ScrollViewer>
        <StackPanel Spacing="30" Margin="40">
            
            <TextBlock Text="Tween Animation Examples (Interactive)" 
                       FontSize="24" 
                       FontWeight="Bold"/>

            <!-- Example 1: Slide animation with Margin -->
            <StackPanel Spacing="10">
                <TextBlock Text="1. Slide with Margin" FontWeight="SemiBold"/>
                <Button Content="Click to Slide Right"
                        Background="ForestGreen"
                        Foreground="White"
                        Padding="20,10"
                        HorizontalAlignment="Left"
                        Margin="0"
                        anim:Tweener.OnClick="margin:0->200,0,0,0@800ms ease:OutBack"/>
            </StackPanel>

            <!-- Example 2: Bounce animation with TranslateTransform -->
            <StackPanel Spacing="10">
                <TextBlock Text="2. Bounce with TranslateTransform" FontWeight="SemiBold"/>
                <Button Content="Click to Bounce"
                        Background="Crimson"
                        Foreground="White"
                        Padding="20,10"
                        HorizontalAlignment="Left"
                        RenderTransformOrigin="0.5,0.5"
                        anim:Tweener.OnClick="y:0->-50@400ms ease:OutQuad; y:-50->0@400ms ease:OutBounce">
                    <Button.RenderTransform>
                        <TranslateTransform/>
                    </Button.RenderTransform>
                </Button>
            </StackPanel>

            <!-- Example 3: Scale animation -->
            <StackPanel Spacing="10">
                <TextBlock Text="3. Scale Animation" FontWeight="SemiBold"/>
                <Button Content="Click to Scale"
                        Background="Orange"
                        Foreground="White"
                        Padding="20,10"
                        HorizontalAlignment="Left"
                        RenderTransformOrigin="0.5,0.5"
                        anim:Tweener.OnClick="scalex:1->1.5@300ms ease:OutBack; scalex:1.5->1@300ms ease:OutElastic; scaley:1->1.5@300ms ease:OutBack; scaley:1.5->1@300ms ease:OutElastic">
                    <Button.RenderTransform>
                        <ScaleTransform/>
                    </Button.RenderTransform>
                </Button>
            </StackPanel>

            <!-- Example 4: Rotate animation -->
            <StackPanel Spacing="10">
                <TextBlock Text="4. Rotate Animation" FontWeight="SemiBold"/>
                <Button Content="Click to Rotate"
                        Background="Teal"
                        Foreground="White"
                        Padding="20,10"
                        Width="150"
                        HorizontalAlignment="Left"
                        RenderTransformOrigin="0.5,0.5"
                        anim:Tweener.OnClick="angle:0->360@1s ease:InOutCubic">
                    <Button.RenderTransform>
                        <RotateTransform/>
                    </Button.RenderTransform>
                </Button>
            </StackPanel>

            <!-- Example 5: Opacity fade -->
            <StackPanel Spacing="10">
                <TextBlock Text="5. Opacity Fade" FontWeight="SemiBold"/>
                <Button Content="Click to Fade Out and In"
                        Background="Purple"
                        Foreground="White"
                        Padding="20,10"
                        HorizontalAlignment="Left"
                        anim:Tweener.OnClick="opacity:1->0@500ms ease:OutCubic; opacity:0->1@500ms ease:InCubic"/>
            </StackPanel>

            <!-- Example 6: Multi-transform (Rotate + Scale) -->
            <StackPanel Spacing="10">
                <TextBlock Text="6. Multiple Transforms (Rotate + Scale)" FontWeight="SemiBold"/>
                <Button Content="Click for Multi-Animation"
                        Background="DodgerBlue"
                        Foreground="White"
                        Padding="20,10"
                        HorizontalAlignment="Left"
                        RenderTransformOrigin="0.5,0.5"
                        anim:Tweener.OnClick="angle:0->180@800ms ease:OutBack reset; scalex:1->1.3@400ms; scalex:1.3->1@400ms; scaley:1->1.3@400ms; scaley:1.3->1@400ms;">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <RotateTransform/>
                            <ScaleTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Window>
