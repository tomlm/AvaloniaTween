<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:Class="AvaloniaTween.Demo.MainWindow"
		Title="AvaloniaTween.Demo">
	<Grid RowDefinitions="Auto,*" Margin="10">
		<StackPanel Orientation="Horizontal" Spacing="10">
			<Button x:Name="AnimateButton" Content="Animate" Click="AnimateButton_Click"/>
			<Button x:Name="ResetButton" Content="Reset" Click="ResetButton_Click"/>
		</StackPanel>

		<Canvas Grid.Row="1">
			<TextBlock x:Name="TargetText" 
				Text="Hello, Avalonia!" 
				FontSize="24" 
				Canvas.Left="50" 
				Canvas.Top="50"/>
			
			<TextBlock x:Name="TargetText2" 
				Text="Hello, again!" 
				FontSize="24" 
				Canvas.Left="50" 
				Canvas.Top="100"/>
		</Canvas>

	</Grid>
</Window>
