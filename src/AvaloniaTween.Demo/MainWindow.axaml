<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaTweener.Demo.MainWindow"
        Title="AvaloniaTweener Demo"
        Width="400" Height="300">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
        <TextBlock Text="AvaloniaTweener Demo" 
                   FontSize="24" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>
        
        <Button Content="Code Behind Examples (Static)"
                Click="OnCodeExamplesClick"
                Padding="20,10"
                HorizontalAlignment="Center"/>
        
        <Button Content="Tween Examples (Interactive)"
                Click="OnTweenExamplesClick"
                Padding="20,10"
                HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
