<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:tween="using:AvaloniaTweener.Markup"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
		x:Class="AvaloniaTweener.Demo.XamlExamples"
		Title="XAML Static Resource Animation Examples"
		Width="800" Height="600">

	<Window.Resources>
		<BackEaseOut x:Key="BackEaseOut" />
		<BounceEaseOut x:Key="BounceEaseOut" />
		<QuadraticEaseOut x:Key="QuadraticEaseOut" />
		<ElasticEaseOut x:Key="ElasticEaseOut" />
		<CubicEaseOut x:Key="CubicEaseOut" />
		<CubicEaseIn x:Key="CubicEaseIn" />
		<CubicEaseInOut x:Key="CubicEaseInOut" />
		<QuadraticEaseIn x:Key="QuadraticEaseIn" />


		<!-- Animation 1: Slide with Margin -->
		<tween:Animation x:Key="SlideAnimation">
			<tween:Transform PropertyName="Layoutable.MarginProperty">
				<tween:Animate To="200,0,0,0" Duration="0:0:0.8" Easing="{StaticResource BackEaseOut}"/>
			</tween:Transform>
		</tween:Animation>

		<!-- Animation 2: Bounce with TranslateTransform -->
		<tween:Animation x:Key="BounceAnimation">
			<tween:Transform PropertyName="TranslateTransform.Y">
				<tween:Animate To="-50" Duration="0:0:0.4" Easing="{StaticResource QuadraticEaseOut}"/>
				<tween:Animate To="0" Duration="0:0:0.4" Easing="{StaticResource BounceEaseOut}"/>
			</tween:Transform>
		</tween:Animation>

		<!-- Animation 3: Scale Animation -->
		<tween:Animation x:Key="ScaleAnimation">
			<tween:Transform PropertyName="ScaleTransform.ScaleX">
				<tween:Animate To="1.5" Duration="0:0:0.3" Easing="{StaticResource BackEaseOut}"/>
				<tween:Animate To="1" Duration="0:0:0.3" Easing="{StaticResource ElasticEaseOut}"/>
			</tween:Transform>
			<tween:Transform PropertyName="ScaleTransform.ScaleY">
				<tween:Animate To="1.5" Duration="0:0:0.3" Easing="{StaticResource BackEaseOut}"/>
				<tween:Animate To="1" Duration="0:0:0.3" Easing="{StaticResource ElasticEaseOut}"/>
			</tween:Transform>
		</tween:Animation>

		<!-- Animation 4: Rotate Animation -->
		<tween:Animation x:Key="RotateAnimation">
			<tween:Transform PropertyName="RotateTransform.Angle">
				<tween:Animate To="360" Duration="0:0:1" Easing="{StaticResource  CubicEaseInOut}"/>
			</tween:Transform>
		</tween:Animation>

		<!-- Animation 5: Opacity Fade -->
		<tween:Animation x:Key="FadeAnimation">
			<tween:Transform PropertyName="Opacity">
				<tween:Animate To="0" Duration="0:0:0.5" Easing="{StaticResource  CubicEaseOut}"/>
				<tween:Animate To="1" Duration="0:0:0.5" Easing="{StaticResource  CubicEaseIn}"/>
			</tween:Transform>
		</tween:Animation>

		<!-- Animation 6: Multi-transform (Rotate + Scale) -->
		<tween:Animation x:Key="MultiTransformAnimation">
			<tween:Transform PropertyName="RotateTransform.Angle" Reset="True">
				<tween:Animate To="180" Duration="0:0:0.8" Easing="{StaticResource  BackEaseOut}"/>
			</tween:Transform>
			<tween:Transform PropertyName="ScaleTransform.ScaleX">
				<tween:Animate To="1.3" Duration="0:0:0.4" Easing="{StaticResource  QuadraticEaseOut}"/>
				<tween:Animate To="1" Duration="0:0:0.4" Easing="{StaticResource  QuadraticEaseIn}"/>
			</tween:Transform>
			<tween:Transform PropertyName="ScaleTransform.ScaleY">
				<tween:Animate To="1.3" Duration="0:0:0.4" Easing="{StaticResource  QuadraticEaseOut}"/>
				<tween:Animate To="1" Duration="0:0:0.4" Easing="{StaticResource  QuadraticEaseIn}"/>
			</tween:Transform>
		</tween:Animation>

	</Window.Resources>

	<ScrollViewer>
		<StackPanel Spacing="30" Margin="40">

			<TextBlock Text="XAML Static Resource Animation Examples (Interactive)"
					   FontSize="24"
					   FontWeight="Bold"/>

			<!-- Example 1: Slide animation with Margin -->
			<StackPanel Spacing="10">
				<TextBlock Text="1. Slide with Margin" FontWeight="SemiBold"/>
				<Button Content="Click to Slide Right"
						Background="ForestGreen"
						Foreground="White"
						Padding="20,10"
						HorizontalAlignment="Left"
						Margin="0"
						tween:Tweener.OnClickAnimation="{StaticResource SlideAnimation}"/>
			</StackPanel>

			<!-- Example 2: Bounce animation with TranslateTransform -->
			<StackPanel Spacing="10">
				<TextBlock Text="2. Bounce with TranslateTransform" FontWeight="SemiBold"/>
				<Button Content="Click to Bounce"
						Background="Crimson"
						Foreground="White"
						Padding="20,10"
						HorizontalAlignment="Left"
						RenderTransformOrigin="0.5,0.5"
						tween:Tweener.OnClickAnimation="{StaticResource BounceAnimation}">
					<Button.RenderTransform>
						<TranslateTransform/>
					</Button.RenderTransform>
				</Button>
			</StackPanel>

			<!-- Example 3: Scale animation -->
			<StackPanel Spacing="10">
				<TextBlock Text="3. Scale Animation" FontWeight="SemiBold"/>
				<Button Content="Click to Scale"
						Background="Orange"
						Foreground="White"
						Padding="20,10"
						HorizontalAlignment="Left"
						RenderTransformOrigin="0.5,0.5"
						tween:Tweener.OnClickAnimation="{StaticResource ScaleAnimation}">
					<Button.RenderTransform>
						<ScaleTransform/>
					</Button.RenderTransform>
				</Button>
			</StackPanel>

			<!-- Example 4: Rotate animation -->
			<StackPanel Spacing="10">
				<TextBlock Text="4. Rotate Animation" FontWeight="SemiBold"/>
				<Button Content="Click to Rotate"
						Background="Teal"
						Foreground="White"
						Padding="20,10"
						Width="150"
						HorizontalAlignment="Left"
						RenderTransformOrigin="0.5,0.5"
						tween:Tweener.OnClickAnimation="{StaticResource RotateAnimation}">
					<Button.RenderTransform>
						<RotateTransform/>
					</Button.RenderTransform>
				</Button>
			</StackPanel>

			<!-- Example 5: Opacity fade -->
			<StackPanel Spacing="10">
				<TextBlock Text="5. Opacity Fade" FontWeight="SemiBold"/>
				<Button Content="Click to Fade Out and In"
						Background="Purple"
						Foreground="White"
						Padding="20,10"
						HorizontalAlignment="Left"
						tween:Tweener.OnClickAnimation="{StaticResource FadeAnimation}"/>
			</StackPanel>

			<!-- Example 6: Multi-transform (Rotate + Scale) -->
			<StackPanel Spacing="10">
				<TextBlock Text="6. Multiple Transforms (Rotate + Scale)" FontWeight="SemiBold"/>
				<Button Content="Click for Multi-Animation"
						Background="DodgerBlue"
						Foreground="White"
						Padding="20,10"
						HorizontalAlignment="Left"
						RenderTransformOrigin="0.5,0.5"
						tween:Tweener.OnClickAnimation="{StaticResource MultiTransformAnimation}">
					<Button.RenderTransform>
						<TransformGroup>
							<RotateTransform/>
							<ScaleTransform/>
						</TransformGroup>
					</Button.RenderTransform>
				</Button>
			</StackPanel>

		</StackPanel>
	</ScrollViewer>

</Window>